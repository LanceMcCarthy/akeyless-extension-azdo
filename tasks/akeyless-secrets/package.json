{
  "name": "akeyless-secrets",
  "version": "1.0.0",
  "description": "An Azure DevOps extension to safely retrieve and use secrets from your AKeyless vault.",
  "main": "index.js",
  "scripts": {
    "restore": "npm install",
    "format": "prettier --write **/*.js",
    "lint": "eslint **/*.js",
    "precommit": "npm run restore && npm run format && npm run lint",
    "bump-task-version": "node -e \"const fs=require('fs');const path='./task.json';const j=JSON.parse(fs.readFileSync(path));let v=j.version;v.Patch++;if(v.Patch>99){v.Patch=0;v.Minor++;}if(v.Minor>99){v.Minor=0;v.Major++;}j.version=v;fs.writeFileSync(path,JSON.stringify(j,null,2));\"",
    "package": "cd ../../ && npx tfx-cli extension create --manifest-globs ./vss-extension.json",
    "package-version-bump": "npm run bump-task-version && cd ../../ && npx tfx-cli extension create --manifest-globs ./vss-extension.json  --rev-version"
  },
  "keywords": [
    "release",
    "build",
    "akeyless",
    "secrets",
    "variable",
    "password",
    "token"
  ],
  "author": "Lance McCarthy",
  "license": "ISC",
  "dependencies": {
    "akeyless": "^5.0.8",
    "azure-pipelines-task-lib": "^5.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.4.0",
    "prettier": "^3.6.2"
  }
}
